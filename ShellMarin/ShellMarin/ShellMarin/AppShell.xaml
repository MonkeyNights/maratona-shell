    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Offset="0.1" Color="Yellow" />
                        <GradientStop Offset="1.0" Color="Green" />
                    </LinearGradientBrush>
                </Grid.Background>
                <Label
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Text}"
                    TextColor="Black" />
                <Image Source="{Binding Icon}" />
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>



    <FlyoutItem Title="Main Page">
        <Tab Title="Main Page">
            <shellmarin:MainPage Title="Main Page" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Page 1">
        <Tab Title="TabPage1">
            <shellmarin:Page1 Title="Page 1" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Page 2">
        <Tab Title="Page 2">
            <ShellContent ContentTemplate="{DataTemplate shellmarin:Page2}" />
        </Tab>
    </FlyoutItem>
    <MenuItem Clicked="MenuItem_Clicked" Text="Apresenta Display" />
</Shell>